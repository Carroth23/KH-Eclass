package kh.spring.controller;

import org.springframework.stereotype.Controller;
import org.springframework.web.bind.annotation.RequestMapping;

@Controller
public class HomeController {
	

	@RequestMapping("/")
	public String home() {
		System.out.println("/ 로 들어온 요청은 이 메서드를 실행합니다.");
		return "home";
	}
	@RequestMapping("a")
	public String a() {
		System.out.println("a 로 들어온 요청은 이 메서드를 실행합니다.");
		return "home";
	}
	@RequestMapping("a")
	public String b() {
		System.out.println("b 로 들어온 요청은 이 메서드를 실행합니다.");
		return "home";
	}
	
}
